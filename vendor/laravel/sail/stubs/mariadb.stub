mariadb:
    image: 'mariadb:10'
    ports:
        - '${FORWARD_DB_PORT_PORTAL:-3306}:3306'
    environment:
        MYSQL_ROOT_PASSWORD: '${DB_PASSWORD_PORTAL}'
        MYSQL_ROOT_HOST: "%"
        MYSQL_DATABASE: '${DB_DATABASE_PORTAL}'
        MYSQL_USER: '${DB_USERNAME_PORTAL}'
        MYSQL_PASSWORD: '${DB_PASSWORD_PORTAL}'
        MYSQL_ALLOW_EMPTY_PASSWORD: 'yes'
    volumes:
        - 'sail-mariadb:/var/lib/mysql'
        - './vendor/laravel/sail/database/mysql/create-testing-database.sh:/docker-entrypoint-initdb.d/10-create-testing-database.sh'
    networks:
        - sail
    healthcheck:
        test: ["CMD", "mysqladmin", "ping", "-p${DB_PASSWORD_PORTAL}"]
        retries: 3
        timeout: 5s
